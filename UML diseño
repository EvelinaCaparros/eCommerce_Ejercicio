/*
Diagrama de clases para una aplicación de gestión de productos de shampoo.
*/
@startuml
class Shampoo {
- int id
- String nombre
- double precio
- int stock
  }

class ShampooRepositorio {
- List<Shampoo> shampoos
+ void guardar(Shampoo s)
+ List<Shampoo> buscarTodos()
+ void borrarPorID(int id)
  }

class ShampooApp {
+ main(String[] args)
  }

ShampooRepositorio "1" *-- "*" Shampoo
ShampooApp ..> ShampooRepositorio
@enduml